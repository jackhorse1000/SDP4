<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f3f3f3"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationActivity">

    <LinearLayout
        android:id="@+id/communication_layout"
        android:background="@android:color/holo_green_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Connection:" />

            <TextView
                android:id="@+id/connection_status_txt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Not connected" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Status:" />

            <TextView
                android:id="@+id/status_txt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Stationary" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/upstairs_btn"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stop_all_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="451dp"
        android:background="@android:color/holo_green_light"
        android:text="climb upstairs" />

    <Button
        android:id="@+id/downstairs_btn"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stop_all_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="366dp"
        android:background="@android:color/holo_green_light"
        android:text="climb downstairs" />

    <Button
        android:id="@+id/forward_btn"

        android:layout_width="137dp"
        android:layout_height="85dp"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="136dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="203dp"
        android:background="@drawable/uparrow"
        android:text="move forward"
        android:textAlignment="center"
        android:textSize="14sp" />


    <Button
        android:id="@+id/backward_btn"
        android:layout_width="137dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="136dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="49dp"
        android:background="@drawable/downarrow"
        android:text="move backward" />

    <Button
        android:id="@+id/turn_left_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/leftarrow"
        android:text="turn left" />

    <Button
        android:id="@+id/turn_right_btn"
        android:layout_width="83dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="270dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/rightarrow"
        android:text="turn right" />

    <Button
        android:id="@+id/stop_all_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorAccent"
        android:text="stop all movements" />


</RelativeLayout>
