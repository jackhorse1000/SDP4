<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/appletontower"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationActivity">

    <LinearLayout
        android:id="@+id/communication_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connection:"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/connection_status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Not connected"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Stationary" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/forward_btn"
       
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forward"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light"
        android:layout_below="@id/communication_layout"/>

    <Button
        android:id="@+id/stop_all_btn"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/forward_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop all"
        android:background="@android:color/holo_green_light"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/backward_btn"
        android:layout_below="@+id/forward_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:text="backward"/>

    <Button
        android:id="@+id/turn_left_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/forward_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:text="turn left"/>

    <Button
        android:id="@+id/turn_right_btn"
        android:layout_marginRight="20dp"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/forward_btn"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:text="turn right" />

    <Button
        android:id="@+id/upstairs_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/turn_left_btn"

        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:background="@android:color/holo_green_light"
        android:text="climb" />

    <Button
        android:id="@+id/downstairs_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/connect_spencer_btn"
        android:layout_below="@+id/turn_right_btn"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:layout_marginRight="69dp"
        android:layout_marginBottom="136dp"
        android:background="@android:color/holo_green_light"
        android:text="downstairs" />


    <Button
        android:id="@+id/connect_spencer_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:text="Connect to Spencer"/>


</RelativeLayout>
