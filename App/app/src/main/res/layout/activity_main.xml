<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/connect_bluetooth_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth Connect a new robot" />

    <Button
        android:id="@+id/connect_wifi_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi Connect a new robot" />

    <Button
        android:id="@+id/technical_btn"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:text="Technical Manual" />

    <Button
        android:id="@+id/demo_btn"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:text="Demo" />

</LinearLayout>
